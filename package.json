{
  "name": "filaprint",
  "dependencies": {
    "helmet": "^7.1.0",
    "bcrypt": "^5.1.1",
    "winston": "^3.11.0",
    "drizzle-orm": "^0.29.0",
    "better-sqlite3": "^9.2.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "zod": "^3.22.4",
    "cors": "^2.8.5",
    "jsonwebtoken": "^9.0.2",
    "mqtt": "^5.3.4"
  },
  "license": "MIT",
  "main": "server/index.ts",
  "engines": {
    "node": ">=20.9.0",
    "npm": ">=10.0.0"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "concurrently": "^8.2.2",
    "@types/node": "^20.10.0",
    "husky": "^8.0.3",
    "typescript": "^5.3.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@types/express": "^4.17.21",
    "prettier": "^3.1.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@types/bcrypt": "^5.0.2",
    "tsx": "^4.6.0",
    "snyk": "^1.1248.0",
    "@types/jest": "^29.5.8",
    "playwright": "^1.40.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mqtt": "^3.0.8",
    "@types/cors": "^2.8.17",
    "lint-staged": "^15.2.0",
    "jest": "^29.7.0",
    "@types/better-sqlite3": "^7.6.8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Marcus-Murray/filaprint.git"
  },
  "version": "1.0.0",
  "keywords": [
    "bambu-labs",
    "3d-printer",
    "mqtt",
    "filament-management",
    "maker-tools"
  ],
  "author": "Marcus Murray",
  "scripts": {
    "format": "prettier --write .",
    "test": "npm run test:unit; npm run test:integration; npm run test:e2e",
    "test:e2e": "playwright test",
    "db:migrate": "cd server; npm run db:migrate",
    "build:client": "cd client; npm run build",
    "mcp:stop": "powershell -ExecutionPolicy Bypass -File scripts\\stop-mcp-servers.ps1",
    "format:check": "prettier --check .",
    "mcp:start": "powershell -ExecutionPolicy Bypass -File scripts\\start-mcp-servers.ps1",
    "build:server": "cd server; npm run build",
    "test:unit": "jest",
    "dev:client": "cd client; npm run dev",
    "dev:server": "cd server; npm run dev",
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "db:setup": "cd server; npm run db:setup",
    "security:scan": "npm audit; snyk test",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "build": "npm run build:client; npm run build:server",
    "lint": "eslint . --ext .ts,.tsx",
    "db:seed": "cd server; npm run db:seed",
    "test:integration": "jest --config jest.integration.config.js"
  },
  "description": "Professional Bambu Labs Printer Management System"
}
